public  interface LeadService {

    /**
     * @description Takes a Map of Lead id and lead record and generates an email for each lead.
     * @param Map of Lead id to Lead record
     * @return void
     **/
    void generateEmailForLeads(Map<Id,Lead> leadRecords);
}